{
  "name": "secure-chat",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:frontend": "vite",
    "dev:desktop": "tauri dev",
    "dev:web": "concurrently -n FRONTEND,APP -c green,blue \"VITE_API_BASE=http://127.0.0.1:3000 bun run dev:frontend\" \"cargo run --manifest-path src-tauri/Cargo.toml -- --cli --web-host localhost --web-port 1420 --api-host 127.0.0.1 --api-port 3000\"",
    "dev:cli": "bun run dev:web",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "format": "prettier --write \"src/**/*.{js,ts,tsx,css,md,cjs,mjs,json,html}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,tsx,css,md,cjs,mjs,json,html}\"",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\""
  },
  "dependencies": {
    "@chatscope/chat-ui-kit-react": "^2.1.1",
    "@chatscope/chat-ui-kit-styles": "^1.4.0",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "~2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@tauri-apps/cli": "^2",
    "@types/bun": "^1.2.23",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.42.0",
    "vite": "^7.0.4"
  }
}
